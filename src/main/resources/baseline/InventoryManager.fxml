<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseline.InventoryManagementController">
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" text="Save" />
           <MenuItem mnemonicParsing="false" text="Open" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
    <HBox id="filterArea" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <TextField id="searchBox" maxWidth="140" minWidth="100" />
        <Label id="lblFilter" maxWidth="90" minWidth="70" text="Search By: ">
            <padding>
                <Insets bottom="0" left="10" right="0" top="5" />
            </padding>
        </Label>
        <ComboBox id="combo" maxWidth="120" minWidth="120">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Serial Number" />
                    <String fx:value="Name" />
                </FXCollections>
            </items>
        </ComboBox>
        <Label id="lblFile" maxWidth="60" minWidth="60" text="Export: ">
            <padding>
                <Insets bottom="0" left="10" right="0" top="5" />
            </padding>
        </Label>
        <ComboBox id="formatCombo" maxWidth="150" minWidth="150">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="HTML" />
                    <String fx:value="JSON" />
                    <String fx:value="TSV" />
                </FXCollections>
            </items>
        </ComboBox>
        <Button id="exportBtn" maxWidth="100" minWidth="100" text="Export Data" />
    </HBox>
    <TableView fx:id="tableView" maxHeight="350">
        <columns>
            <TableColumn maxWidth="50" minWidth="20" text="Id" />
            <TableColumn maxWidth="200" minWidth="150" text="Serial Number" />
            <TableColumn maxWidth="400" minWidth="200" text="Product Name" />
            <TableColumn maxWidth="150" minWidth="100" text="Price" />
        </columns>
    </TableView>
    <HBox id="btnArea">
        <Button id="addBtn" maxWidth="160" minWidth="160" text="Add Item" />
        <Button id="updateBtn" maxWidth="160" minWidth="160" text="Edit Item" />
        <Button id="removeBtn" maxWidth="160" minWidth="160" text="Remove Item" />
        <Button id="removeAllBtn" maxWidth="160" minWidth="160" text="Remove All Items" />
    </HBox>
    <HBox id="lblArea">
        <Label id="lblProduct" maxWidth="160" minWidth="160" text=" Serial Number ">
            <font>
                <Font name="Segoe UI Bold" size="13.0" />
            </font>
            <padding>
                <Insets bottom="5" left="45" right="0" top="5" />
            </padding>
        </Label>
        <Label id="lblName" maxWidth="160" minWidth="160" text=" Product Name ">
            <font>
                <Font name="Segoe UI Bold" size="13.0" />
            </font>
            <padding>
                <Insets bottom="5" left="45" right="0" top="5" />
            </padding>
        </Label>
        <Label id="lblPrice" maxWidth="160" minWidth="160" text=" Price (in USD) ">
            <font>
                <Font name="Segoe UI Bold" size="13.0" />
            </font>
            <padding>
                <Insets bottom="5" left="45" right="0" top="5" />
            </padding>
        </Label>
    </HBox>
    <HBox id="addForm">
        <TextField id="serialBox" maxWidth="160" minWidth="160" promptText="Enter Serial Number" />
        <TextField id="nameBox" maxWidth="160" minWidth="160" promptText="Enter Name" />
        <TextField id="priceBox" maxWidth="160" minWidth="160" promptText="Enter Price" />
        <Button id="clearBtn" maxWidth="80" minWidth="80" text="Clear" />
    </HBox>
</VBox>
